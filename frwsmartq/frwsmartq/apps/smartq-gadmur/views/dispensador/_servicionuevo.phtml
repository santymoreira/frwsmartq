<script>
    /*Script que marca todos los videos*/
    function marcar(obj) {
        elem=obj.elements;
        for (i=0;i<elem.length;i++)
            if (elem[i].type=="checkbox")
                elem[i].checked=true;
    }
    /*Script que desmarca todos los videos*/
    function desmarcar(obj) {
        elem=obj.elements;
        for (i=0;i<elem.length;i++)
            if (elem[i].type=="checkbox")
                elem[i].checked=false;
    }
</script>