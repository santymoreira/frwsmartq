     *overflow-x: hidden;
     *padding-right:16px;
 }

 div.fixedHeaderTable thead tr {
     position: relative;
     _position: absolute;
     *top: expression(this.offsetParent.scrollTop-2);
     *background:none;
     background-color:#FFFFFF
 }

 div.fixedHeaderTable tbody {
     *height: auto;
     position:relative;
     *top:50px;
 }

 /* IE6 hacks */
 div.fixedHeaderTable {
     _width:expression(this.offsetParent.clientWidth-20);
     _overflow: auto;
     _overflow-y: scroll;
     _overflow-x: hidden;
 }
 div.fixedHeaderTable thead tr {
     _position: relative
 }
 </style>

